<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="onboarding_container">
        <div class="modal o_onb_modal o_technical_modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Remove Configuration Tips</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-label="Close">Ã—</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Do you want to remove this configuration panel?</p>
                    </div>
                    <div class="modal-footer">
                        <a type="action" class="btn btn-primary" data-dismiss="modal"
                        data-toggle="collapse" href=".o_onb_container"
                        t-att-data-model="close_model" t-att-data-method="close_method">
                            Remove
                        </a>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="o_onb_container collapse show">
            <div t-att-class="'o_onb ' + ('o_onb_completed ' if steps_completed else ' ') + 'position-relative overflow-hidden ' + classes"
                 t-att-style="'background-image:url(' + bg_image + ')'">

                <div class="o_onb_wrap py-5">
                    <a href="#"
                       data-toggle="modal"
                       data-target=".o_onb_modal"
                       class="o_onb_btn_close btn btn-lg text-white position-absolute"
                       title="Close the onboarding panel">&#215;</a>
                    <div class="o_onb_steps d-lg-flex">
                        <t t-out="0" />
                    </div>

                    <t t-set="msgUtilityClasses" t-valuef="position-absolute border-bottom py-4 bg-white d-flex align-items-center justify-content-center"/>
                    <div t-att-class="'o_onb_completed_message ' + msgUtilityClasses + (' o_onb_steps__done' if state.get('onboarding_state') in ('done', 'just_done') else '') + (' o_onb_steps__just_done' if state.get('onboarding_state') == 'just_done' else '')">
                        <span class="h3 m-0">
                            <i class="fa fa-check text-success me-3" />
                            <t t-if="text_completed" t-esc="text_completed" />
                            <t t-else="">Nice work! Your configuration is done.</t>
                        </span>
                        <a type="action" class="btn btn-primary ms-4" data-toggle="collapse" href=".o_onb_container"
                        t-att-data-model="close_model" t-att-data-method="close_method">
                            Close
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="onboarding_step">
        <t t-set="isCurrent" t-value="state not in ('done', 'just_done')"/>
        <t t-set="isDone" t-value="state in ('done', 'just_done')"/>
        <t t-set="isJustDone" t-value="state == 'just_done'"/>

        <t t-set="stepStatusClasses" t-value="
            ('o_onb_step__done ' if isDone else 'o_onb_step__todo ') +
            ('o_onb_step__just_done ' if isJustDone else '')"
        />
        <t t-set="stepUtilityClasses" t-valuef="position-relative d-flex justify-content-center flex-lg-column align-items-lg-center justify-content-lg-start  text-center"/>

        <div t-att-class="'o_onb_step ' + stepStatusClasses + stepUtilityClasses">
            <img t-if="isJustDone" class="o_onb_confetti position-absolute w-100" src="/base/static/img/onboarding_confetti.svg" alt="o_onb_confetti"/>

            <div class="o_onb_step_side d-flex flex-column justify-content-center d-lg-block pt-3 pt-lg-0 flex-grow-lg-1">
                <div class="o_onb_progress position-absolute"/>
                <span class="o_onb_dot fa fa-check d-inline-block rounded-circle small"/>
            </div>
            <div class="o_onb_step_content py-3 pl-3 pl-lg-0 flex-grow-lg-1 d-flex flex-column align-items-center justify-content-around">
                <div class="o_onb_step_content_info mb-3">
                    <a type="action" data-reload-on-close="true" role="button"
                        t-att-data-method="method" t-att-data-model="model">
                        <h4 class="o_onb_step_title text-white" t-esc="title"/>
                    </a>
                    <p class="text-white-75 m-0" t-esc="description"/>
                </div>
                <a t-if="isCurrent" class="o_onb_step_action btn px-4 text-white border border-white" type="action"
                   data-reload-on-close="true" role="button" t-att-data-method="method"
                   t-att-data-model="model">
                    <t t-if="btn_text" t-esc="btn_text" />
                    <t t-else="">Let's do it</t>
                </a>
                <a t-else="" class="o_onb_step_action__done pt-2 text-white" type="action"
                   data-reload-on-close="true" role="button" t-att-data-method="method"
                   t-att-data-model="model">
                    <i t-attf-class="me-2 fa #{done_icon if done_icon else 'fa-check'}" />
                    <span>
                        <t t-if="done_text" t-esc="done_text" />
                        <t t-else="">All done!</t>
                    </span>
                </a>
            </div>
        </div>
    </template>

    <!-- ONBOARDING STEPS -->
    <template id="onboarding_company_step">
        <t t-call="base.onboarding_step">
            <t t-set="title">Company Data</t>
            <t t-set="description">
                Set your company's data for documents header/footer.
            </t>
            <t t-set="btn_text">Let's start!</t>
            <t t-set="method" t-value="'action_open_base_onboarding_company'" />
            <t t-set="model" t-value="'res.company'" />
            <t t-set="state" t-value="state.get('base_onboarding_company_state')" />
        </t>
    </template>
    <!-- COMPANY FORM -->
    <record id="base_onboarding_company_form" model="ir.ui.view">
        <field name="name">base.company.onboarding.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="replace" />
            <form position="inside">
                <footer position="replace">
                    <button name="action_save_onboarding_company_step" class="btn btn-primary" type="object" string="Apply" data-hotkey="q"/>
                    <button special="cancel" data-hotkey="z" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_open_base_onboarding_company" model="ir.actions.act_window">
        <field name="name">Set your company data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.company</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base_onboarding_company_form" />
        <field name="target">new</field>
    </record>
</odoo>
