<odoo>
    <data>
        <template id="minimal_layout">
            &lt;!DOCTYPE html&gt;
            <t t-raw="'&lt;base href=%s&gt;' % base_url"/>
            <html style="height: 0;">
                <head>
                    <t t-call-assets="web.report_assets_pdf" t-js="false" t-inline="true"/>
                    <t t-call-assets="web.report_assets_common" t-js="false" t-inline="true"/>
                    <t t-call-assets="web.report_assets_pdf" t-css="false" t-inline="true"/>
                    <meta charset="utf-8"/>
                    <style type="text/css" media="print">
                        div.footer {
                            page-break-after: always;
                            page-break-inside: avoid;
                        }
                    </style>
                </head>
                <body class="container">
                    <t t-raw="body"/>
                </body>
            </html>
        </template>
    </data>
</odoo>
