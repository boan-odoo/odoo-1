<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_restaurant.PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('button', 'next')]" position="attributes">
            <attribute name="t-att-hidden">env.model.config.set_tip_after_payment and !getOrderIsPaid(props.activeOrder)</attribute>
        </xpath>

        <xpath expr="//div[hasclass('button', 'back')]//span[hasclass('back_text')]" position="replace">
            <t t-if="env.model.config.set_tip_after_payment and getOrderIsPaid(props.activeOrder)">
                <span class="back_text">Keep Open</span>
            </t>
            <t t-else="">$0</t>
        </xpath>

        <xpath expr="//div[hasclass('button', 'next')]//span[hasclass('next_text')]" position="replace">
            <t t-if="env.model.config.set_tip_after_payment and getOrderIsPaid(props.activeOrder)">
                <span class="back_text">Close Tab</span>
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>

</templates>
