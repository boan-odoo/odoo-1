<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="FloorScreen" owl="1">
        <div class="floor-screen screen">
            <div class="screen-content-flexbox">
                <t t-if="env.pos.floors.length > 1">
                    <div class="floor-selector">
                        <t t-foreach="env.pos.floors" t-as="floor" t-key="floor.id">
                            <span class="button button-floor" t-att-class="{ active: floor.id === state.selectedFloorId }" t-on-click="selectFloor(floor)">
                                <t t-esc="floor.name" />
                            </span>
                        </t>
                    </div>
                </t>
                <div class="buttons o-floor-map" t-attf-style="background: {{state.isDisplaySearch || state.isEditMode ? '#fff' : state.floorBackground}};">
                    <t t-if="state.isDisplaySearch">
                        <span class="button close-search-icon" t-on-click="_onCloseSearch">
                            <i class="fa fa-arrow-left" role="img" aria-label="Back" title="Back" />
                        </span>
                        <input class="search button" type="text" autofocus="autofocus" placeholder="Search..." name="searchTable" t-model="state.searchQuery" />
                    </t>
                </div>

                <div>
                    <t t-if="!isFloorEmpty">
                        <span t-if="env.pos.user.role === 'manager'" class="button edit-button editing" t-att-class="{ active: state.isEditMode }" t-on-click.stop="toggleEditMode">
                            <i t-if="state.isEditMode" class="fa fa-arrow-left" role="img" aria-label="Back" title="Back" />
                            <i t-else="" class="fa fa-pencil" role="img" aria-label="Edit" title="Edit"/>
                        </span>
                        <span t-if="!state.isEditMode and env.isMobile" class="search button">
                            <span class="search-icon" t-on-click="state.isDisplaySearch=!state.isDisplaySearch">
                                <i class="fa fa-search" role="img" aria-label="Search" title="Search" />
                            </span>
                        </span>
                    </t>
                    <t t-if="state.isEditMode">
                        <EditBar selectedTable="selectedTable" />
                    </t>
                </div>

                <div
                    t-on-click="trigger('deselect-table')"
                    t-on-touchstart="_onPinchStart"
                    t-on-touchmove="_onPinchMove"
                    t-on-touchend="_onPinchEnd"
                    class="floor-map"
                    t-attf-style="background: {{state.floorBackground}};"
                    t-ref="floor-map-ref"
                >
                    <div t-if="isFloorEmpty" class="empty-floor">
                        <span>This floor has no tables yet, use the </span>
                        <i class="fa fa-plus" role="img" aria-label="Add button" title="Add button"></i>
                        <span> button in the editing toolbar to create new tables.</span>
                    </div>
                    <div t-else="" class="tables">
                        <t t-foreach="displayTables" t-as="table" t-key="table.id">
                            <TableWidget t-if="table.id !== state.selectedTableId" table="table" />
                            <EditableTable t-else="" table="table" />
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
