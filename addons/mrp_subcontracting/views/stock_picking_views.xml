<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_form_view" model="ir.ui.view">
        <field name="name">stock.picking.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_validate'][hasclass('o_btn_validate')]" position="before">
                <field name="display_action_record_components" invisible="1" />
                <button name="action_record_components" class="oe_highlight" attrs="{'invisible': [('display_action_record_components', '=', False)]}" string="Record components" type="object" data-hotkey="shift+x"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']//tree//button[@name='action_show_details']" position="after">
                <field name="show_serial_mass_receipt" invisible="1"/>
                <button name="action_serial_mass_receipt" type="object" icon="fa-list" width="0.1"
                    string="Mass receipt"
                    attrs="{'invisible': [('show_serial_mass_receipt', '=', False)]}" options='{"warn": true}'/>
                <field name="show_subcontracting_details_visible" invisible="1"/>
                <button name="action_show_subcontract_details" string="Register components for subcontracted product" type="object" icon="fa-sitemap"
                    width="0.1" attrs="{'invisible': [('show_subcontracting_details_visible', '=', False)]}"/>
                <field name="is_subcontract" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']//tree//button[@name='action_assign_serial']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('display_assign_serial', '=', False), ('show_operations', '=', False), ('is_subcontract', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>

