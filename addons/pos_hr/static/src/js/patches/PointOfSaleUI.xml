<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_hr.PointOfSaleUI" t-inherit="point_of_sale.PointOfSaleUI" t-inherit-mode="extension" owl="1">
        <xpath expr="//HeaderButton" position="replace">
            <HeaderLockButton t-if="env.model.config.module_pos_hr" />
            <HeaderButton t-if="env.model.getIsCashierManager() or !(env.model.getRecords('hr.employee').length gt 1)" />
        </xpath>
    </t>

</templates>
