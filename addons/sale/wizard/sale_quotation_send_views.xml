<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_quotation_send_views_form" model="ir.ui.view">
        <field name="name">sale.quotation.send.form</field>
        <field name="model">sale.quotation.send</field>
        <field name="arch" type="xml">
            <form string="Send By Email">
                <!-- If there is draft, this is visible -->
                            <!-- template for draft -->
                <!-- If there is sale, this is visible -->
                            <!-- template for sale -->

                <footer>
                    <button string="Send"
                        name="send_quotation_action" type="object" class="send btn-primary o_mail_send"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="model_sale_order_action_send_quotation" model="ir.actions.server">
        <field name="name">Send by Email</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_send_quotation()</field>
    </record>
</odoo>
