<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_cancel_view_form" model="ir.ui.view">
            <field name="name">sale.sale.order.cancel.form</field>
            <field name="model">sale.order.cancel</field>
            <field name="arch" type="xml">
                <form>
                    <field name="render_model" invisible="1"/>
                    <field name="order_id" invisible="1"/>
                    <field name="template_id" invisible="1"/>
                    <field name="display_invoice_alert" invisible="1"/>
                    <div col="2"
                         class="alert alert-warning"
                         role="alert">
                        <span>Please mind that cancelled orders cannot be undone. <br/></span>
                        <span id="display_invoice_alert"
                              attrs="{'invisible': [('display_invoice_alert', '=', False)]}">
                            Draft invoices for this order will be cancelled. <br/>
                        </span>
                    </div>
                    <field name="partner_ids"
                           widget="many2many_tags_email"
                           attrs="{'readonly': False}"
                           context="{'force_email':True,
                                     'show_email':True,
                                     'no_create_edit': True}"/>
                    <field name="subject" placeholder="Subject"/>
                    <field name="body" label="Content" options="{'style-inline': true}"/>
                    <div></div>
                    <footer>
                        <button string="Send and cancel"
                                name="action_send_mail_and_cancel"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                name="action_cancel"
                                type="object"
                                class="btn-primary"/>
                        <button string="Discard"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
