<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_update_probabilities_view_form" model="ir.ui.view">
        <field name="name">crm.update.probabilities.form</field>
        <field name="model">crm.lead.pls.update</field>
        <field name="arch" type="xml">
            <form string="Update Probabilities">
                <div class="row">
                    <div class="col">
                        The success rate is computed based on the stage, but you can add more fields in the statistical analysis.
                    </div>
                    <div class="col">
                        <field name="pls_fields" widget="many2many_tags" placeholder="Extra fields..."/>
                    </div>
                </div>
                <br/><br/>
                <div>
                    <span>
                        Please confirm to update the probabilities of all 
                        the Leads/Opportunities created since <field name="pls_start_date"/>. 
                    </span>
                    <span>
                        This can take up to several minutes.
                    </span>
                </div>
                <footer>
                    <button name="action_update_crm_lead_probabilities" type="object"
                        string="Confirm" class="btn-primary"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_crm_lead_update_probabilities" model="ir.actions.act_window">
        <field name="name">Update Probabilities</field>
        <field name="res_model">crm.lead.pls.update</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="crm_update_probabilities_view_form"/>
    </record>

</odoo>
