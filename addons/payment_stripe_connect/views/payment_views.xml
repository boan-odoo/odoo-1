<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">Stripe Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='acquirer']" position="before">
                <group invisible="1" name="stripe_onboarding_group" attrs="{'invisible': ['|', ('provider', '!=', 'stripe'), ('stripe_secret_key', '!=', False)]}">
                    <group>
                        <button type="object" role="button" name="action_stripe_onboarding_account" class="btn-primary"
                                string="Create &amp; Connect your Stripe Account" attrs="{'invisible': [('state', '!=', 'disabled')]}"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//group[@name='acquirer']" position="inside">
                <div class="alert alert-warning" role="status" name="stripe_configuration_info" attrs="{'invisible': [('provider', '!=', 'stripe')]}">
                    <div name="stripe_keys_link" attrs="{'invisible': [('stripe_secret_key', '!=', False), ('stripe_publishable_key', '!=', False)]}">
                        <a href="https://dashboard.stripe.com/account/apikeys" target="_blank">
                            Click here and fill your Secret and Publishable keys
                        </a>.
                    </div>
                    <div attrs="{'invisible': [('stripe_webhook_secret', '!=', False)]}">
                        <a href="https://www.odoo.com/documentation/15.0/applications/general/payment_acquirers/stripe.html#credentials-tab">
                            Click here and configure your webhook
                        </a>.
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_payment_acquirer_onboarding" model="ir.actions.act_window">
        <field name="name">Payment Acquirers</field>
        <field name="res_model">payment.acquirer</field>
        <field name="view_mode">form</field>
        <field name="context">{'stripe_onboarding': True, 'form_view_initial_mode': 'edit'}</field>
    </record>

</odoo>
