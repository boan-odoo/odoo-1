<?xml version="1.0"?>
<odoo><data>

    <record id="mail_identity_view_tree" model="ir.ui.view">
        <field name="name">mail.identity.view.tree</field>
        <field name="model">mail.identity</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Identities">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="mail_identity_view_form" model="ir.ui.view">
        <field name="name">mail.identity.view.form</field>
        <field name="model">mail.identity</field>
        <field name="arch" type="xml">
            <form string="Indentity">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="partner_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="mail_identity_action" model="ir.actions.act_window">
        <field name="name">Identities</field>
        <field name="res_model">mail.identity</field>
        <field name="view_mode">tree,form</field>
    </record>

</data></odoo>
