<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ChatterAttachmentBox" owl="1">
        <div class="o_ChatterAttachmentBox">
            <div class="o_ChatterAttachmentBox_title">
                <hr class="o_ChatterAttachmentBox_dashedLine"/>
                <span class="o_ChatterAttachmentBox_titleText">
                    Attachments
                </span>
                <hr class="o_ChatterAttachmentBox_dashedLine"/>
            </div>
            <div class="o_ChatterAttachmentBox_content">
                <t t-if="isDropZoneVisible.value">
                    <DropZone
                        class="o_ChatterAttachmentBox_dropZone"
                        t-on-o-dropzone-files-dropped="_onDropZoneFilesDropped"
                        t-ref="dropzone"
                    />
                </t>
                <t t-if="chatter.attachmentList">
                    <AttachmentList
                        class="o_ChatterAttachmentBox_attachmentList"
                        attachmentListLocalId="chatter.attachmentList.localId"
                        t-on-o-attachment-removed="chatter.onAttachmentRemoved"
                    />
                </t>
                <button class="o_ChatterAttachmentBox_buttonAdd btn btn-link" type="button" t-on-click="chatter.onClickAdd">
                    <i class="fa fa-plus-square"/>
                    Add attachments
                </button>
            </div>
            <FileUploader
                threadLocalId="chatter.thread.localId"
                t-on-o-attachment-created="chatter.onAttachmentCreated"
                t-ref="fileUploader"
            />
        </div>
    </t>

</templates>
