<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ComposerSuggestion" owl="1">
        <a class="o_ComposerSuggestion dropdown-item" t-att-class="{ 'active': suggestionListItem and suggestionListItem.isHighlighted }" href="#" t-att-title="title()" role="menuitem" t-on-click="_onClick">
            <t t-if="suggestionListItem">
                <t t-if="suggestionListItem.partner">
                    <PartnerImStatusIcon
                        class="o_ComposerSuggestion_partnerImStatusIcon"
                        hasBackground="false"
                        partnerLocalId="suggestionListItem.partner.localId"
                    />
                </t>
                <span class="o_ComposerSuggestion_part1"><t t-esc="suggestionListItem.namePart1"/></span>
                <span class="o_ComposerSuggestion_part2"><t t-esc="suggestionListItem.namePart2"/></span>
            </t>
        </a>
    </t>

</templates>
