<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.MobileMessagingNavbar" owl="1">
        <div class="o_MobileMessagingNavbar btn-group w-100 border-top shadow-sm">
            <t t-set="tabsNumber" t-value="props.tabs.length"></t>
            <t t-foreach="props.tabs" t-as="tab" t-key="tab.id">
                <div class="o_MobileMessagingNavbar_tab d-flex align-items-center justify-content-center flex-wrap py-2 btn" t-on-click="_onClick" t-att-data-tab-id="tab.id"
                    t-att-class="{
                        'o-active': props.activeTabId === tab.id,
                        'btn-primary': props.activeTabId === tab.id,
                        'btn-light': props.activeTabId != tab.id,
                    }">
                    <div t-if="tab.icon" class="o_MobileMessagingNavbar_tabIcon mx-2 my-1 h2" t-att-class="{
                            'text-white': props.activeTabId === tab.id,
                            'text-700': props.activeTabId != tab.id,
                        }">
                        <i t-att-class="tab.icon"/>
                    </div>
                    <small class="o_MobileMessagingNavbar_tabLabel text-uppercase"><b t-esc="tab.label"/></small>
                </div>
            </t>
        </div>
    </t>

</templates>
