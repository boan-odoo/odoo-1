<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.GifCategories" owl="1">
        <div class="o_GifCategories">
            <div class="grid">
                <t t-foreach="gifManager.categories" t-as="category" t-key="category.localId">
                    <div class="grid-item">
                        <t t-if="category.type == 'favorite'">
                            <div class="o_GifFavoriteCategory">
                                <i class="fa fa-star"></i>
                                <div class="o_GifFavoriteOverlay" t-on-click="_onClickFavoriteCategory">
                                    <span class="o_GifTitle">
                                        <t t-esc="category.title" />
                                    </span>
                                </div>
                            </div>
                        </t>
                        <t t-if="category.type == 'category'">
                            <GifCategory gifCategoryLocalId="category.localId" />
                        </t>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
