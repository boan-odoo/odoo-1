<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.DiscussSidebar" owl="1">
        <div name="root" class="o_DiscussSidebar d-flex flex-column bg-800">
            <div class="o_DiscussSidebar_group o_DiscussSidebar_groupMailbox d-flex flex-column flex-shrink-0 pt-3">
                <t t-foreach="orderedMailboxes" t-as="mailbox" t-key="mailbox.localId">
                    <DiscussSidebarItem
                        class="o_DiscussSidebar_item"
                        threadLocalId="mailbox.localId"
                    />
                </t>
            </div>
            <hr class="o_DiscussSidebar_separator mx-3 bg-700"/>
            <dic t-if="env.models['mail.thread'].all(thread => thread.isPinned and thread.model === 'mail.channel').length > 19" class="px-3">
                <input class="o_DiscussSidebar_quickSearch form-control border-0 rounded-pill" t-on-input="_onInputQuickSearch" placeholder="Quick search..." t-ref="quickSearchInput" t-esc="discuss.sidebarQuickSearchValue"/>
            </dic>
            <div class="o_DiscussSidebar_group o_DiscussSidebar_groupChannel d-flex flex-column flex-shrink-0">
                <div class="o_DiscussSidebar_groupHeader d-flex align-items-center py-2 px-3">
                    <small class="o_DiscussSidebar_groupHeaderItem o_DiscussSidebar_groupTitle o-clickable font-weight-bold text-uppercase" t-on-click="_onClickChannelTitle">
                        Channels
                    </small>
                    <div class="o-autogrow"/>
                    <button class="o_DiscussSidebar_groupHeaderItem o_DiscussSidebar_groupHeaderItemAdd btn btn-dark py-0 px-1 border-0 rounded-circle" t-on-click="_onClickChannelAdd" title="Add or join a channel">
                        <i class="fa fa-plus fa-fw small"/>
                    </button>
                </div>
                <div class="o_DiscussSidebar_list">
                    <t t-if="discuss.isAddingChannel">
                        <div class="o_DiscussSidebar_item o_DiscussSidebar_itemNew d-flex justify-content-center px-3">
                            <AutocompleteInput
                                class="o_DiscussSidebar_itemNewInput form-control border-0 flex-grow-1"
                                customClass="'o_DiscussSidebar_newChannelAutocompleteSuggestions'"
                                isFocusOnMount="true"
                                isHtml="true"
                                placeholder="FIND_OR_CREATE_CHANNEL"
                                select="_onAddChannelAutocompleteSelect"
                                source="_onAddChannelAutocompleteSource"
                                t-on-o-hide="_onHideAddingItem"
                            />
                        </div>
                    </t>
                    <t t-foreach="quickSearchOrderedAndPinnedMultiUserChannels" t-as="channel" t-key="channel.localId">
                        <DiscussSidebarItem
                            class="o_DiscussSidebar_item"
                            threadLocalId="channel.localId"
                        />
                    </t>
                </div>
            </div>
            <div class="o_DiscussSidebar_group o_DiscussSidebar_groupChat d-flex flex-column flex-shrink-0">
                <div class="o_DiscussSidebar_groupHeader d-flex align-items-center py-2 px-3">
                    <small class="o_DiscussSidebar_groupHeaderItem o_DiscussSidebar_groupTitle font-weight-bold text-uppercase text-500">
                        Direct Messages
                    </small>
                    <div class="o-autogrow"/>
                    <button class="o_DiscussSidebar_groupHeaderItem o_DiscussSidebar_groupHeaderItemAdd btn btn-dark py-0 px-1 border-0 rounded-circle" t-on-click="_onClickChatAdd" title="Start a conversation">
                        <i class="fa fa-plus fa-fw small"/>
                    </button>
                </div>
                <div class="o_DiscussSidebar_list">
                    <t t-if="discuss.isAddingChat">
                        <div class="o_DiscussSidebar_item o_DiscussSidebar_itemNew d-flex justify-content-center px-3">
                            <AutocompleteInput
                                class="o_DiscussSidebar_itemNewInput form-control border-0 flex-grow-1"
                                isFocusOnMount="true"
                                placeholder="'Find or start a conversation...'"
                                select="_onAddChatAutocompleteSelect"
                                source="_onAddChatAutocompleteSource"
                                t-on-o-hide="_onHideAddingItem"
                            />
                        </div>
                    </t>
                    <t t-foreach="quickSearchPinnedAndOrderedChats" t-as="chat" t-key="chat.localId">
                        <DiscussSidebarItem
                            class="o_DiscussSidebar_item"
                            threadLocalId="chat.localId"
                        />
                    </t>
                </div>
            </div>
        </div>
    </t>

</templates>
