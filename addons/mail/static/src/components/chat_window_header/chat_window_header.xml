<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ChatWindowHeader" owl="1">
        <div class="o_ChatWindowHeader border-0 d-flex align-items-center pl-2 pr-0 m-0 text-white"
            t-on-click="_onClick"
            t-att-class="{
                'o-mobile': env.messaging.device.isMobile,
                h3: env.messaging.device.isMobile
            }">
            <t t-if="chatWindow">
                <t t-if="props.hasCloseAsBackButton">
                    <div class="o_ChatWindowHeader_command o_ChatWindowHeader_commandBack o_ChatWindowHeader_commandClose ml-n2 pl-3 pr-4 h-100 d-flex align-items-center h1 m-0 text-white" t-att-class="{ 'o-mobile': env.messaging.device.isMobile }" t-on-click="_onClickClose" title="Close conversation">
                        <i class="fa fa-angle-left"/>
                    </div>
                </t>
                <t t-if="chatWindow.thread and chatWindow.thread.model === 'mail.channel'">
                    <ThreadIcon
                        class="o_ChatWindowHeader_icon o_ChatWindowHeader_item mx-1"
                        threadLocalId="chatWindow.thread.localId"
                    />
                </t>
                <div class="o_ChatWindowHeader_item o_ChatWindowHeader_name user-select-none text-truncate mx-1 font-weight-normal" t-att-title="chatWindow.name">
                    <t t-esc="chatWindow.name"/>
                </div>
                <t t-if="chatWindow.thread and chatWindow.thread.mass_mailing">
                    <i class="fa fa-envelope-o" title="Messages are sent by email" role="img"/>
                </t>
                <t t-if="chatWindow.thread and chatWindow.thread.localMessageUnreadCounter > 0">
                    <div class="o_ChatWindowHeader_counter o_ChatWindowHeader_item mx-1">
                        (<t t-esc="chatWindow.thread.localMessageUnreadCounter"/>)
                    </div>
                </t>
                <div class="flex-grow-1"/>
                <div class="o_ChatWindowHeader_item o_ChatWindowHeader_rightArea h-100 d-flex align-items-center ml-1">
                    <t t-if="chatWindow.hasShiftPrev">
                        <div class="o_ChatWindowHeader_command o_ChatWindowHeader_commandShiftPrev d-flex align-items-center h-100 px-3" t-att-class="{ 'o-mobile': env.messaging.device.isMobile }" t-on-click="_onClickShiftPrev" t-att-title="shiftPrevText">
                            <!-- this is reversed automatically when language is rtl -->
                            <i class="fa fa-angle-left"/>
                        </div>
                    </t>
                    <t t-if="chatWindow.hasShiftNext">
                        <div class="o_ChatWindowHeader_command o_ChatWindowHeader_commandShiftNext d-flex align-items-center h-100 px-3" t-att-class="{ 'o-mobile': env.messaging.device.isMobile }" t-on-click="_onClickShiftNext" t-att-title="shiftNextText">
                            <!-- this is reversed automatically when language is rtl -->
                            <i class="fa fa-angle-right"/>
                        </div>
                    </t>
                    <t t-if="props.isExpandable">
                        <div class="o_ChatWindowHeader_command o_ChatWindowHeader_commandExpand d-flex align-items-center h-100 px-2" t-att-class="{ 'o-mobile': env.messaging.device.isMobile }" t-on-click="_onClickExpand" title="Open in Discuss">
                            <i class="fa fa-expand fa-fw"/>
                        </div>
                    </t>
                    <t t-if="!props.hasCloseAsBackButton">
                        <div class="o_ChatWindowHeader_command o_ChatWindowHeader_commandClose d-flex align-items-center h-100 px-3" t-att-class="{ 'o-mobile': env.messaging.device.isMobile }" t-on-click="_onClickClose" title="Close chat window">&#215;</div>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
