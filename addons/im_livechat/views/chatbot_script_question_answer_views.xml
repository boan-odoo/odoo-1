<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <record id="chatbot_script_question_answer_view_form" model="ir.ui.view">
        <field name="name">chatbot.script.question.answer.view.form</field>
        <field name="model">im_livechat.chatbot.script_question_answer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="step_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="chatbot_script_question_answer_view_tree" model="ir.ui.view">
        <field name="name">chatbot.script.question.answer.view.tree</field>
        <field name="model">im_livechat.chatbot.script_question_answer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

</data></odoo>
