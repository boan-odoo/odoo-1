<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_website_inherit" model="ir.ui.view">
        <field name="name">hr.job.form.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr_recruitment.view_hr_job_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@name='state_primary']" position="before">
                <field name="website_published" invisible="1"/>
                <t t-elif="record.state.raw_value == 'recruit' &amp;&amp; record.website_published.raw_value" name="state_success">
                    <i class="fa fa-circle o_color_10" title="Published" />
                </t>
            </xpath>
            <xpath expr="//t[@name='state_primary']" position="attributes">
                <attribute name="t-elif">record.state.raw_value == 'recruit' &amp;&amp; !record.website_published.raw_value</attribute>
            </xpath>
            <xpath expr="//button[@name='%(hr_recruitment.action_hr_job_applications)d']" position="after">
                <field name="website_url" invisible="1"/>
                <a t-att-href="record.website_url.raw_value" class="mt-1">
                    Open Website
                </a>
            </xpath>
        </field>
    </record>
</odoo>
