<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mrp_report_reception_body" inherit_id="stock.report_reception_body">
        <xpath expr="//a[@name='source_link']" position="before">
            <i t-if="source._name == 'sale.order' and source.picking_ids[0].priority == '1'" class="o_priority o_priority_star fa fa-star"/>
        </xpath>
        <xpath expr="//a[@name='source_link']" position="after">
            <t t-if="source._name == 'sale.order'"> | <t t-esc="source.partner_id.name"/></t>
        </xpath>
    </template>
</odoo>
