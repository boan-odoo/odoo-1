<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_type_form_inherited" model="ir.ui.view">
            <field name="name">stock.picking.type.form.inherited</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Locations']" position="after">
                    <group string="Electronic Data Interchange" attrs="{'invisible': [('compatible_edi_ids', '=', [])]}">
                        <field name="compatible_edi_ids" invisible="1" />
                        <field name="edi_format_ids" widget="many2many_checkboxes"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
