<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="snippet_options" inherit_id="website.snippet_options" name="Comparison Snippet Options">
    <xpath expr="." position="inside">
        <div data-selector="#products_grid .o_wsale_products_grid_table_wrapper > table"
            data-no-check="true"
            groups="website.group_website_designer">
            <we-checkbox string="Compare"
                         data-customize-website-views="website_sale_comparison.add_to_compare"
                         data-no-preview="true"
                         data-reload="/"/>
        </div>
        <div data-selector="main:has(.o_wsale_product_page)" data-no-check="true">
            <we-checkbox string="Attributes Table"
                         data-customize-website-views="website_sale_comparison.product_attributes_body"
                         data-no-preview="true"
                         data-reload="/"/>
        </div>
    </xpath>
</template>

</odoo>
