<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="website_mass_mailing.subscription_submitted" name="Subscription Sent">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty h-100">
                <div class="container d-flex flex-column justify-content-center h-100">
                    <div class="row justify-content-center">
                        <t t-if="request.session.get('form_builder_model_model', '') == 'mailing.contact.subscription'">
                            <t t-set="subscription" t-value="request.website._website_form_last_record().sudo()"/>
                        </t>
                        <h1 class="text-center">
                            <i class="fa fa-check-circle fa-1x text-success mr-2" role="img" aria-label="Success" title="Success"/>
                            <t t-if="subscription">
                                <span>You successfully subscribed to the <span t-field="subscription.list_id.name"/> mailing list.</span>
                            </t>
                        </h1>
                        <h1 class="text-center">Thank you for subscribing ! You will receive news about this subject.</h1>
                    </div>
                </div>
            </div>
         </t>
    </template>

    <record id="successfully_subscribed" model="website.page">
        <field name="is_published">True</field>
        <field name="url">/subscription-submitted</field>
        <field name="website_indexed" eval="False"/>
        <field name="view_id" ref="subscription_submitted" />
    </record>

</odoo>
