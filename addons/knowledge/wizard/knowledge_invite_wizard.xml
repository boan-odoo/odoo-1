<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_knowledge_invite_wizard" model="ir.ui.view">
        <field name="name">knowledge.invite.wizard.view</field>
        <field name="model">knowledge.invite.wizard</field>
        <field name="arch" type="xml">
            <form class="py-0">
                <group>
                    <field name="article_id" invisible="1"/>
                    <field name="recipients" widget="many2many_tags_email" placeholder="Add contacts to notify..."/>
                </group>
                <footer>
                    <button string="Share" type="object" name="action_invite_users" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
