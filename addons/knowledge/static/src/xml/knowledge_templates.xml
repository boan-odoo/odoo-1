<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="knowledge.knowledge_move_article_to_modal">
        <form class="container">
            <input type="text" class="form-control" placeholder="Search an Article to use as Parent"/>
            <ul>
                <li><i class="fa fa-search"/>Marketing playbook</li>
                <li><i class="fa fa-search"/>Sales Playbook</li>
            </ul>
        </form>
    </t>
    <t t-name="knowledge.knowledge_add_a_link_modal">
        <form class="container">
            <div class="form-check form-check-inline">
                <input id="link_type_1" class="form-check-input" type="radio" name="link_type" value="curstom_url"/>
                <label for="link_type_1" class="form-check-label">Custom URL</label>
            </div>
            <div class="form-check form-check-inline">
                <input id="link_type_2" class="form-check-input" type="radio" name="link_type" value="article_selection"/>
                <label for="link_type_2" class="form-check-label">Article Selection</label>
            </div>
            <div class="form-group row">
                <label for="url" class="col-sm-2 col-form-label">
                    URL / Email
                </label>
                <div class="col-sm-10">
                    <input id="url" class="form-control" type="text" placeholder="e.g. https://www.mycompany.odoo.com"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="article" class="col-sm-2 col-form-label">
                    Select an article
                </label>
                <div class="col-sm-10">
                    <select class="form-control form-control">
                        <option>Small select</option>
                        <option>Medium select</option>
                        <option>Large select</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <span class="col-sm-2 col-form-label">
                    Style
                </span>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <input id="style_type_1" class="form-check-input" type="radio" name="style" value="style"/>
                        <label for="style_type_1" class="form-check-label">
                            <button class="btn btn-link" type="button">Link</button>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input id="style_type_2" class="form-check-input" type="radio" name="style" value="style"/>
                        <label for="style_type_2" class="form-check-label">
                            <button class="btn btn-primary" type="button">Primary</button>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input id="style_type_3" class="form-check-input" type="radio" name="style" value="style"/>
                        <label for="style_type_3" class="form-check-label">
                            <button class="btn btn-secondary" type="button">Secondary</button>
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </t>
    <t t-name="knowledge.knowledge_share_an_article_modal">
        <form class="container">
            <div class="form-group row">
                <label for="published" class="col-sm-2 col-form-label">
                    Published
                </label>
                <div class="col-sm-10">
                    <input id="published" class="form-control" type="checkbox"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="link" class="col-sm-2 col-form-label">
                    Link
                </label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="www.mycompany.odoo.com/share/f09b14"/>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">
                                <i class="fa fa-copy"/>Copy
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="link" class="col-sm-2 col-form-label">
                    Recipients
                </label>
                <div class="col-sm-10">
                    <!-- TODO -->
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="notify"/>
                <label class="form-check-label" for="notify">
                    Notify Recipients
                </label>
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Write a Message..."/>
            </div>
        </form>
    </t>
</templates>
