<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="knowledge.share_button">
        <button class="btn btn-secondary btn-share" type="button">Share</button>
    </t>
    <t t-name="knowledge.dropdown_button">
        <div class="btn-group" role="toolbar" aria-label="options">
            <div class="o-dropdown dropdown o-dropdown--no-caret">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-ellipsis-v"/>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">
                        <i class="fa fa-angle-double-right"/> Move To
                    </a>
                    <a class="dropdown-item" href="#">
                        <i class="fa fa-lock"/> Lock
                    </a>
                    <a class="dropdown-item" href="#">
                        <i class="fa fa-copy"/> Duplicate
                    </a>
                    <a class="dropdown-item" href="#">
                        <i class="fa fa-trash"/> Delete
                    </a>
                </div>
            </div>
        </div>
    </t>
</templates>