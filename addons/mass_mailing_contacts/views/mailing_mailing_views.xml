<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mailing_mailing_view_form_inherit" model="ir.ui.view">
        <field name="name">mailing.mailing.view.form.inherit.contact</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='mailing_model_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='mailing_model_id_container']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
