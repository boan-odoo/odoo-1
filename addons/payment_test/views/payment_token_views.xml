<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_token_form_inherit_payment_test" model="ir.ui.view">
        <field name="name">payment.token.form.inherit.payment.test</field>
        <field name="model">payment.token</field>
        <field name="inherit_id" ref="payment.payment_token_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='payment_token_general_information']" position="inside">
                <field name="provider" invisible="1"/>
                <field name="state"  attrs="{'invisible': [('provider', '!=', 'test')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
