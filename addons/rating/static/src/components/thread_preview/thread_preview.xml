<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadPreview" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o_ThreadPreview_messageBody')]" position="replace">
            <t t-if="thread.lastMessage and thread.lastMessage.ratingImgSource">
                <span class="o_ThreadPreview_ratingText">Rating:</span>
                <img class="o_ThreadPreview_ratingImage" t-att-src="thread.lastMessage.ratingImgSource" alt="Rating Face Image"/>
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
