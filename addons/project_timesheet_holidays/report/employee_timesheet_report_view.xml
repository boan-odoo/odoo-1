<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="timesheet_employee_report_view_pivot" model="ir.ui.view">
            <field name="name">timesheet.employee.report.pivot</field>
            <field name="model">employee.timesheet.report</field>
            <field name="arch" type="xml">
                <pivot string="Timesheets" sample="1" disable_linking="1">
                    <field name="date" interval="week" type="col"/>
                    <field name="unit_amount" type="measure" widget="timesheet_uom"/>
                    <field name="overtime_duration" type="measure"/>
                    <field name="working_hours" type="measure"/>
                </pivot>
             </field>
        </record>

        <record id="timesheet_employee_report_action" model="ir.actions.act_window">
            <field name="name">Employee Timesheet Report</field>
            <field name="res_model">employee.timesheet.report</field>
            <field name="view_mode">pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No data yet!
                </p><p>
                    Track your working hours by projects every day and invoice this time to your customers.
                </p>
            </field>
        </record>

        <menuitem id="menu_timesheets_employee_report"
            parent="hr_timesheet.menu_timesheets_reports_timesheet"
            action="timesheet_employee_report_action"
            name="Timesheets by Employee"
            sequence="11"/>
    </data>
</odoo>
