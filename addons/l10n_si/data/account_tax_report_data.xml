<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tax_report" model="account.tax.report">
        <field name="name">Tax Report</field>
        <field name="country_id" ref="base.si"/>
    </record>

    <!-- I. Supplies of goods and services (values excluding VAT) -->
	<record id="tax_report_I" model="account.tax.report.line">
        <field name="name">I. Dobave blaga in storitev (vrednosti so brez DDV)</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence">1</field>
    </record>
        <!-- 11. Supplies of goods and services -->
        <record id="tax_report_11" model="account.tax.report.line">
            <field name="name">11. Dobave blaga in storitev</field>
            <field name="code">11</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_I"/>
            <field name="sequence">1</field>
        </record>

        <!-- 11a. Supplies of goods and services in Slovenia, of which VAT is charged by the recipient -->
        <record id="tax_report_11a" model="account.tax.report.line">
            <field name="name">11a. Dobave blaga in storitev v Sloveniji, od katerih obračuna DDV prejemnik</field>
            <field name="code">11a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_I"/>
            <field name="sequence">1</field>
        </record>

        <!-- 12. Deliveries of goods and services to other EU Member States -->
        <record id="tax_report_12" model="account.tax.report.line">
            <field name="name">12. Dobave blaga in storitev v druge države članice EU</field>
            <field name="code">12</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_I"/>
            <field name="sequence">1</field>
        </record>

        <!-- 13. Sale of goods at a distance -->
        <record id="tax_report_13" model="account.tax.report.line">
            <field name="name">13. Prodaja blaga na daljavo</field>
            <field name="code">13</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_I"/>
            <field name="sequence">1</field>
        </record>

        <!-- 14. Assembly and installation of goods in another Member State -->
        <record id="tax_report_14" model="account.tax.report.line">
            <field name="name">14. Montaža in instaliranje blaga v drugi državi članici</field>
            <field name="code">14</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_I"/>
            <field name="sequence">1</field>
        </record>

        <!-- 15. Exempt supplies without the right to deduct VAT -->
        <record id="tax_report_15" model="account.tax.report.line">
            <field name="name">15. Oproščene dobave brez pravice do odbitka DDV</field>
            <field name="code">15</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_I"/>
            <field name="sequence">1</field>
        </record>
    <!-- I. Supplies of goods and services (values excluding VAT) [END] -->

    <!-- II. VAT charged -->
	<record id="tax_report_II" model="account.tax.report.line">
        <field name="name">II. Obračunani DDV</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence">2</field>
    </record>
        <!-- 21. At a rate of 22 % -->
        <record id="tax_report_21" model="account.tax.report.line">
            <field name="name">21. po stopnji 22 %</field>
            <field name="code">21</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 22. At a rate of 9.5 % -->
        <record id="tax_report_22" model="account.tax.report.line">
            <field name="name">22. po stopnji 9,5 %</field>
            <field name="code">22</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 22a. At a rate of 5 % -->
        <record id="tax_report_22a" model="account.tax.report.line">
            <field name="name">22a. po stopnji 5 %</field>
            <field name="code">22a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 23. 22 % of acquisitions of goods from other EU Member States -->
        <record id="tax_report_23" model="account.tax.report.line">
            <field name="name">23. od pridobitev blaga iz drugih držav članic EU po stopnji 22 %</field>
            <field name="code">23</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 23a. Of the services received from other EU Member States at a rate of 22 % -->
        <record id="tax_report_23a" model="account.tax.report.line">
            <field name="name">23a. od prejetih storitev iz drugih držav članic EU po stopnji 22 %</field>
            <field name="code">23a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 24. 9.5% of acquisitions of goods from other EU Member States -->
        <record id="tax_report_24" model="account.tax.report.line">
            <field name="name">24. od pridobitev blaga iz drugih držav članic EU po stopnji 9,5 %</field>
            <field name="code">24</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 24a. Of the services received from other EU Member States at the rate of 9.5 % -->
        <record id="tax_report_24a" model="account.tax.report.line">
            <field name="name">24a. od prejetih storitev iz drugih držav članic EU po stopnji 9,5 %</field>
            <field name="code">24a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 24b. Acquisitions of goods from other EU Member States at the rate of 5 % -->
        <record id="tax_report_24b" model="account.tax.report.line">
            <field name="name">24b. od pridobitev blaga iz drugih držav članic EU po stopnji 5 %</field>
            <field name="code">24b</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 24c. Of the services received from other EU Member States at the rate of 5 % -->
        <record id="tax_report_24c" model="account.tax.report.line">
            <field name="name">24c. od prejetih storitev iz drugih držav članic EU po stopnji 5 %</field>
            <field name="code">24c</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 25. On the basis of self-assessment as a recipient of goods and services at a rate of 22 % -->
        <record id="tax_report_25" model="account.tax.report.line">
            <field name="name">25. na podlagi samoobdavčitve kot prejemnik blaga in storitev po stopnji 22 %</field>
            <field name="code">25</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 25a. On the basis of self-assessment as a recipient of goods and services at a rate of 9.5 % -->
        <record id="tax_report_25a" model="account.tax.report.line">
            <field name="name">25a. na podlagi samoobdavčitve kot prejemnik blaga in storitev po stopnji 9,5 %</field>
            <field name="code">25a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 25b. On the basis of self-assessment as a recipient of goods and services at a rate of 5 % -->
        <record id="tax_report_25b" model="account.tax.report.line">
            <field name="name">25b. na podlagi samoobdavčitve kot prejemnik blaga in storitev po stopnji 5 %</field>
            <field name="code">25b</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>

        <!-- 26. On the basis of self-assessment of imports -->
        <record id="tax_report_26" model="account.tax.report.line">
            <field name="name">26. na podlagi samoobdavčitve od uvoza</field>
            <field name="code">26</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_II"/>
            <field name="sequence">2</field>
        </record>
    <!-- II. VAT charged [END] -->

    <!-- III. Purchases of goods and services (values excluding VAT) -->
	<record id="tax_report_III" model="account.tax.report.line">
        <field name="name">III. Nabave blaga in storitev (vrednosti so brez DDV)</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence">3</field>
    </record>
        <!-- 31. Purchases of goods and services -->
        <record id="tax_report_31" model="account.tax.report.line">
            <field name="name">31. Nabave blaga in storitev</field>
            <field name="code">31</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_III"/>
            <field name="sequence">3</field>
        </record>

        <!-- 31a. Purchases of goods and services in Slovenia, of which the recipient charges VAT -->
        <record id="tax_report_31a" model="account.tax.report.line">
            <field name="name">31a. Nabave blaga in storitev v Sloveniji, od katerih obračuna DDV prejemnik</field>
            <field name="code">31a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_III"/>
            <field name="sequence">3</field>
        </record>

        <!-- 32. Acquisitions of goods from other EU Member States -->
        <record id="tax_report_32" model="account.tax.report.line">
            <field name="name">32. Pridobitve blaga iz drugih držav članic EU</field>
            <field name="code">32</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_III"/>
            <field name="sequence">3</field>
        </record>

        <!-- 32a. Services received from other EU Member States -->
        <record id="tax_report_32a" model="account.tax.report.line">
            <field name="name">32a. Prejete storitve iz drugih držav članic EU</field>
            <field name="code">32a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_III"/>
            <field name="sequence">3</field>
        </record>

        <!-- 33. Exempt purchases of goods and services and exempt acquisitions of goods -->
        <record id="tax_report_33" model="account.tax.report.line">
            <field name="name">33. Oproščene nabave blaga in storitev ter oproščene pridobitve blaga</field>
            <field name="code">33</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_III"/>
            <field name="sequence">3</field>
        </record>

        <!-- 34. Purchase value of real estate -->
        <record id="tax_report_34" model="account.tax.report.line">
            <field name="name">34. Nabavna vrednost nepremičnin</field>
            <field name="code">34</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_III"/>
            <field name="sequence">3</field>
        </record>

        <!-- 35. Cost of other fixed assets -->
        <record id="tax_report_35" model="account.tax.report.line">
            <field name="name">35. Nabavna vrednost drugih osnovnih sredstev</field>
            <field name="code">35</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_III"/>
            <field name="sequence">3</field>
        </record>
    <!-- III. Purchases of goods and services (values excluding VAT) [END] -->

    <!-- IV. VAT deduction -->
	<record id="tax_report_IV" model="account.tax.report.line">
        <field name="name">IV. Odbitek DDV</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence">4</field>
    </record>
        <!-- 41. From purchases of goods and services, acquisition of goods and services received from other EU Member States and from imports at a rate of 22 % -->
        <record id="tax_report_41" model="account.tax.report.line">
            <field name="name">41. od nabav blaga in storitev, pridobitev blaga in prejetih storitev iz drugih držav članic EU in od uvoza po stopnji 22 %</field>
            <field name="code">41</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_IV"/>
            <field name="sequence">4</field>
        </record>

        <!-- 42. From purchases of goods and services, acquisition of goods and services received from other EU Member States and from imports at a rate of 9.5 % -->
        <record id="tax_report_42" model="account.tax.report.line">
            <field name="name">42. od nabav blaga in storitev, pridobitev blaga in prejetih storitev iz drugih držav članic EU in od uvoza po stopnji 9,5 %</field>
            <field name="code">42</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_IV"/>
            <field name="sequence">4</field>
        </record>

        <!-- 42a. From purchases of goods and services, acquisition of goods and services received from other EU Member States and from imports at a rate of 5 % -->
        <record id="tax_report_42a" model="account.tax.report.line">
            <field name="name">42a. od nabav blaga in storitev, pridobitev blaga in prejetih storitev iz drugih držav članic EU in od uvoza po stopnji 5 %</field>
            <field name="code">42a</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_IV"/>
            <field name="sequence">4</field>
        </record>

        <!-- 43. Of the flat-rate compensation at the rate of 8 % -->
        <record id="tax_report_42a" model="account.tax.report.line">
            <field name="name">43. od pavšalnega nadomestila po stopnji 8 %</field>
            <field name="code">43</field>
            <field name="report_id" ref="tax_report"/>
            <field name="parent_id" ref="tax_report_IV"/>
            <field name="sequence">4</field>
        </record>
    <!-- IV. VAT deduction [END] -->

    <!-- 51. VAT liability -->
	<record id="tax_report_51" model="account.tax.report.line">
        <field name="name">51. Obveznost DDV</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence">5</field>
    </record>

    <!-- 52. VAT surplus -->
	<record id="tax_report_52" model="account.tax.report.line">
        <field name="name">52. Presežek DDV</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence">6</field>
    </record>
</odoo>
