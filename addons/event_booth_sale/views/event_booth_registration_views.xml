<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <record id="event_booth_registration_view_form" model="ir.ui.view">
        <field name="name">event.booth.registration.view.form.inherit.event.booth.sale</field>
        <field name="model">event.booth.registration</field>
        <field name="inherit_id" ref="event_booth.event_booth_registration_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='name_info']" position="before">
                <widget name="web_ribbon" title="Paid" attrs="{'invisible': [('state', '!=', 'paid')]}"/>
            </xpath>
            <group name="renter_info" position="after">
                <group string="Transaction" groups="base.group_no_one">
                    <field name="sale_order_id"/>
                    <field name="sale_order_line_id"/>
                </group>
            </group>
        </field>
    </record>

    <record id="event_booth_registration_view_tree" model="ir.ui.view">
        <field name="name">event.booth.registration.view.tree.inherit.event.booth.sale</field>
        <field name="model">event.booth.registration</field>
        <field name="inherit_id" ref="event_booth.event_booth_registration_view_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="attributes">
                <attribute name="decoration-success">state in ['confirm', 'paid']</attribute>
            </field>
        </field>
    </record>

</data></odoo>