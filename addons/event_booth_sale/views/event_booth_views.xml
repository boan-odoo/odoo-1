<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <record id="event_type_booth_category_view_form" model="ir.ui.view">
        <field name="name">event.type.booth.category.view.form.inherit.event.booth.sale</field>
        <field name="model">event.type.booth.category</field>
        <field name="inherit_id" ref="event_booth.event_type_booth_category_view_form"/>
        <field name="arch" type="xml">
            <group name="details" position="after">
                <group>
                    <field name="product_id" context="{'default_is_event_booth': True, 'default_type': 'service'}"/>
                </group>
            </group>
            <field name="is_multi_slots" position="after">
                <field name="price"/>
                <field name="extra_price" attrs="{'invisible': [('is_multi_slots', '=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="event_type_booth_category_view_tree" model="ir.ui.view">
        <field name="name">event.type.booth.category.view.tree.from.type.inherit.event.booth.sale</field>
        <field name="model">event.type.booth.category</field>
        <field name="inherit_id" ref="event_booth.event_type_booth_category_view_tree"/>
        <field name="arch" type="xml">
            <field name="is_multi_slots" position="after">
                <field name="product_id" invisible="1"/>
                <field name="price"/>
                <field name="extra_price" attrs="{'invisible': [('is_multi_slots', '=', False)]}"/>
            </field>
        </field>
    </record>

</data></odoo>
