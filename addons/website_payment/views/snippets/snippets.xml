<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="website_payment.rde">
    <t t-call="web_editor.snippet_install" id="snippet_donation_hook">
        <t t-set="name">Donation</t>
        <t t-set="key" t-valuef="website_payment.s_donation"/>
        <t t-set="module" t-valuef="website_payment"/>
        <t t-set="thumbnail_url" t-valuef="/website/static/src/img/snippets_thumbs/s_donation.svg"/>
    </t>
</template>
<template id="snippets" inherit_id="website.snippets" name="Snippet Donation">
    <xpath expr="//t[@id='snippet_donation_hook']" position="attributes">
        <attribute name="t-call">web_editor.snippet</attribute>
    </xpath>
    <!-- <xpath expr="//t[@id='snippet_donation_button_hook']" position="attributes">
        <attribute name="t-call">web_editor.snippet</attribute>
    </xpath> -->
</template>

</odoo>
