<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Account creation -->
    <record id="odoo_payments_onboarding_url" model="ir.config_parameter">
        <field name="key">odoo_payments.onboarding_url</field>
        <field name="value">https://www.odoo.com/odoo_adyen/</field>
    </record>

    <!-- API requests after account validation -->
    <record id="odoo_payments_proxy_url" model="ir.config_parameter">
        <field name="key">odoo_payments.proxy_url</field>
        <field name="value">https://payment-adyen.odoo.com/payment_proxy_adyen/</field>
    </record>

    <data noupdate="1">

        <record id="adyen_sync_cron" model="ir.cron">
            <field name="name">Odoo Payments Sync</field>
            <field name="model_id" ref="model_adyen_account"/>
            <field name="state">code</field>
            <field name="code">model._sync_adyen_cron()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

    </data>

</odoo>
