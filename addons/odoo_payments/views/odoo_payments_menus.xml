<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_create_or_redirect_to_adyen_account" model="ir.actions.server">
        <field name="name">Account Configuration</field>
        <field name="model_id" ref="odoo_payments.model_adyen_account"/>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_create_or_redirect()
        </field>
    </record>

    <menuitem name="Odoo Payments"
              id="odoo_payments_root_menu"
              web_icon="odoo_payments,static/description/icon.png"
              sequence="99">
        <!-- Disabled until the account is created and validated by the support -->
        <menuitem id="menu_adyen_balance"
                  action="adyen_balance_action"
                  sequence="10"
                  active="False"/>
        <!-- Disabled until the account is created and validated by the support -->
        <menuitem id="menu_adyen_transaction"
                  action="adyen_transaction_action"
                  sequence="20"
                  active="False"/>
        <menuitem id="menu_adyen_account"
                  action="action_create_or_redirect_to_adyen_account"
                  sequence="30"/>
    </menuitem>

</odoo>