<?xml version="1.0" ?>
<odoo>
    <record id="mail_template_gift_card" model="mail.template">
        <field name="name">Gift Card: Send by Email</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="subject">Your Gift Card</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="body_html" type="html">
            <table class="table">
                <h4>Thank for your purchasing. You will find below your gift cards code.</h4>
                <tbody>
                    <tr>
                        <th>#Code</th>
                        <th>Amount</th>
                    </tr>
                    % for line in object.order_line:
                    % for gift_card in line.generated_gift_card_ids
                    <tr>
                        <td>
                            ${gift_card.code}
                        </td>
                        <td>
                            ${format_amount(gift_card.initial_amount, gift_card.currency_id)}
                        </td>
                    </tr>
                    % endfor
                    % endfor
                </tbody>
            </table>
        </field>
    </record>
</odoo>
