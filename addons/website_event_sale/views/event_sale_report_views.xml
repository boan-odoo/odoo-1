<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="event_sale_report_view_tree" model="ir.ui.view">
        <field name="name">event.sale.report.view.tree.inherit</field>
        <field name="model">event.sale.report</field>
        <field name="inherit_id" ref="event_sale.event_sale_report_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[last()]" position="after">
                <field name="is_published"/>
            </xpath>
        </field>
    </record>

    <record id="event_sale_report_view_search" model="ir.ui.view">
        <field name="name">event.sale.report.view.search.inherit</field>
        <field name="model">event.sale.report</field>
        <field name="inherit_id" ref="event_sale.event_sale_report_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Published Events" name="is_published" domain="[('is_published', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record id="event_sale.event_sale_report_action" model="ir.actions.act_window">
        <field name="context">{
            'search_default_is_published': 1,
            'search_default_priced_tickets': 1,
            'search_default_event_date_start': 1,
            'search_default_group_by_event_id': 1,
            'search_default_group_by_product_id': 1,
            'pivot_measures': ['__count__', 'sale_price_subtotal', 'sale_price_total']
        }</field>
    </record>
</odoo>
