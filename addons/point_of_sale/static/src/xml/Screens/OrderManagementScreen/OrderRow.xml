<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderRow" owl="1">
        <div class="order-row"
             t-att-class="{ highlight: highlighted, lighter: !props.order.locked, 'order-table': env.isMobile }"
             t-on-click="trigger('click-order', props.order)">
            <div class="item name" t-att-class="{ 'order-row': env.isMobile }">
                <div class="col" t-if="env.isMobile">
                    Order
                </div>
                <div t-att-class="{ col: env.isMobile, end: env.isMobile }">
                    <t t-esc="name"/>
                </div>
            </div>
            <div class="item date" t-att-class="{ 'order-row': env.isMobile }">
                <div class="col" t-if="env.isMobile">
                    Date
                </div>
                <div t-att-class="{ col: env.isMobile, end: env.isMobile }">
                    <t t-esc="date"/>
                </div>
            </div>
            <div class="item customer" t-att-class="{ 'order-row': env.isMobile }">
                <div class="col" t-if="env.isMobile">
                    Customer
                </div>
                <div t-att-class="{ col: env.isMobile, end: env.isMobile }">
                    <t t-esc="customer"/>
                </div>
            </div>
            <div class="item total" t-att-class="{ 'order-row': env.isMobile }">
                <div class="col" t-if="env.isMobile">
                    Total
                </div>
                <div t-att-class="{ col: env.isMobile, end: env.isMobile }">
                    <t t-esc="total"/>
                </div>
            </div>
        </div>
    </t>

</templates>
