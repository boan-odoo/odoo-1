<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ClientLine" owl="1">
        <tr t-attf-class="client-line {{highlight}}" t-att-data-id="props.partner.id"
            t-on-click="() => this.props.onClickClient(props.partner)">
            <td>
                <t t-esc="props.partner.name or ''" />
                <br/><t t-esc="props.partner.parent_name or ''"/>
            </td>
            <td t-if="!env.isMobile">
                <t t-esc="shortAddress" />
            </td>
            <td class="client-line-email" t-if="!env.isMobile">
                <div t-if="props.partner.phone">
                    <i class="fa fa-phone"/><t t-esc="props.partner.phone"/>
                </div>
                <div t-if="props.partner.email" class="e-mail-field">
                    <i class="fa fa-paper-plane-o"/><t t-esc="props.partner.email" />
                </div>
            </td>
            <td t-if="env.isMobile">
                <t t-esc="props.partner.zip or ''" />
                <span t-if="highlight"><br/></span>
            </td>
            <td class="client-line-balance" t-if="props.isBalanceDisplayed"></td>
            <td>
                <button class="edit-client-button" t-on-click.stop="() => this.props.onClickEdit({detail: {partner: props.partner}})">DETAILS</button>
            </td>
            <td class="client-line-last-column-placeholder oe_invisible"></td>
        </tr>
    </t>

</templates>
