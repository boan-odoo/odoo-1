<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.TextInputPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup popup-textinput">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div class="div">
                        <p>
                            <t t-esc="props.body" />
                        </p>
                        <input type="text" t-model="state.inputValue" t-ref="input" />
                    </div>
                    <div class="footer">
                        <div class="button confirm" t-on-click="props.respondWith([true, state.inputValue])">
                            <t t-esc="props.confirmText" />
                        </div>
                        <div class="button cancel" t-on-click="props.respondWith([false])">
                            <t t-esc="props.cancelText" />
                        </div>
                    </div>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
