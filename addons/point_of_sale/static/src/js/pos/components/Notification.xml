<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.Notification" owl="1">
        <div t-if="state.show" class="notification" t-transition="fade" t-on-click="onClickToastNotification">
            <span>
                <t t-esc="state.message" />
            </span>
        </div>
        <div t-else="" style="display: none;"></div>
    </t>

</templates>
