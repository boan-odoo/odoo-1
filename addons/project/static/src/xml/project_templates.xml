<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="day_of_week_widget">
        <table class="o_dow_widget">
            <thead>
                <tr>
                    <th t-foreach="widget.labels" t-as="label">
                        <t t-esc="label"/>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="o_dow_days" />
            </tbody>
        </table>
    </t>

    <t t-name="one2many_sub_task_widget">
        <t t-if="widget.value.count">
            <div class="o_field_one2many o_field_widget o_field_one2many_sub_task" t-att-title="widget.string" t-att-aria-label="widget.string">
                <t t-esc="widget.value.count"/>
                <i class="fa fa-tasks" role="img"/>
            </div>
        </t>
    </t>
</templates>
