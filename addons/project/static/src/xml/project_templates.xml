<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="day_of_week_widget">
        <table class="o_dow_widget">
            <thead>
                <tr>
                    <th t-foreach="widget.labels" t-as="label">
                        <t t-esc="label"/>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="o_dow_days" />
            </tbody>
        </table>
    </t>
    <t t-name="project_state_selection" t-inherit="web.FormSelection" t-inherit-mode="primary">
        <xpath expr="//div[hasclass('o_selection')]/a[@role='button']" position="after">
            <span class="o_status_label"/>
        </xpath>
    </t>
</templates>
