<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadPreview" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o_ThreadPreview_messageBody')]" position="replace">
            <t t-if="thread.lastMessage and thread.lastMessage.trackingValues.length > 0">
                <t t-esc="thread.lastMessage.trackingValues[0].changedField.string_val"/>
                <t t-esc="thread.lastMessage.trackingValues[0].oldValue.string_val"/>
                <span class="o_ThreadPreview_arrow">
                    <div class="fa fa-long-arrow-right" role="img"/>
                </span>
                <t t-esc="thread.lastMessage.trackingValues[0].newValue.string_val"/>
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
