<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadNeedactionPreview" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o_ThreadNeedactionPreview_messageBody')]" position="replace">
            <t t-if="thread.lastNeedactionMessageAsOriginThread and thread.lastNeedactionMessageAsOriginThread.trackingValues.length > 0">
                <t t-esc="thread.lastNeedactionMessageAsOriginThread.trackingValues[0].changedField.string_val"/>
                <t t-esc="thread.lastNeedactionMessageAsOriginThread.trackingValues[0].oldValue.string_val"/>
                <span class="o_ThreadNeedactionPreview_arrow">
                    <div class="fa fa-long-arrow-right" role="img"/>
                </span>
                <t t-esc="thread.lastNeedactionMessageAsOriginThread.trackingValues[0].newValue.string_val"/>
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
