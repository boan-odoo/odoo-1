<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="simple_pen" model="product.product">
        <field name="list_price">1.20</field>
        <field name="name">Simple Pen</field>
        <field name="weight">0.01</field>
        <field name="default_code">CONS_0002</field>
        <field name="image_1920" type="base64" file="loyalty/static/img/simple_pen.png"/>
    </record>

    <record id="reward_01" model="loyalty.reward">
        <field name="name">Free Pen</field>
        <field name="reward_type">product</field>
        <field name="point_cost">5</field>
        <field name="reward_product_id" ref="loyalty.simple_pen" />
    </record>

    <record id="reward_02" model="loyalty.reward">
        <field name="name">5% Discount</field>
        <field name="reward_type">discount</field>
        <field name="point_cost">100</field>
        <field name="discount_type">percentage</field>
        <field name="discount_percentage">5</field>
    </record>

    <record id="reward_03" model="loyalty.reward">
        <field name="name">-10 Discount</field>
        <field name="reward_type">discount</field>
        <field name="point_cost">100</field>
        <field name="discount_type">fixed_amount</field>
        <field name="discount_fixed_amount">10</field>
    </record>

    <record id="program" model="loyalty.program">
        <field name="name">Loyalty Program</field>
        <field name="points">10</field>
        <field name="reward_ids" eval="[(6, 0, [ref('loyalty.reward_01'),
                                                ref('loyalty.reward_02'),
                                                ref('loyalty.reward_03')])]" />
    </record>
</odoo>
