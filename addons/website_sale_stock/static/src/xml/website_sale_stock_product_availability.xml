<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="website_sale_stock.product_availability">
        <t t-if="product_type == 'product' and is_published">
            <div id="out_of_stock_message" t-if="show_availability != 'never' and out_of_stock_message and free_qty lte 0" t-attf-class="availability_message_#{product_template}">
                <t t-raw="out_of_stock_message"/>
            </div>
            <div id="threshold_message" t-if="show_availability != 'never' and threshold_message and free_qty gt 0 and free_qty lte available_threshold" t-attf-class="availability_message_#{product_template} text-warning mt16">
                <t t-raw="threshold_message"/>
            </div>
            <div id="available_message" t-if="show_availability == 'always' and available_message and free_qty gt available_threshold" t-attf-class="availability_message_#{product_template} text-success mt16">
                <t t-raw="available_message"/>
            </div>
            <div t-if="cart_qty" t-attf-class="availability_message_#{product_template} text-warning mt8">
                You already added <t t-if="!free_qty">all</t> <t t-esc="cart_qty" /> <t t-esc="uom_name" /> in your cart.
            </div>
            <t t-if="allow_to_order == 'always' and !free_qty">
                <div t-attf-class="availability_message_#{product_template} text-success mt16">Orders awaiting replenishment are accepted.</div>
                <div t-if="incoming_qty and incoming_date" t-attf-class="availability_message_#{product_template} text-success mt16">Item will ship by <t t-esc="incoming_date"/>.</div>
            </t>
        </t>
    </t>
</templates>
