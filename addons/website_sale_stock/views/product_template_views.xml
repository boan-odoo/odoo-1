<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_website_sale_stock" model="ir.ui.view">
        <field name="name">product.template.form.inherit.website.sale.stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='public_categ_ids']" position="after">
                <field name="allow_to_order" widget="radio" attrs="{'invisible': [('type', 'in', ['service', 'consu'])]}"/>
                <field name="available_threshold" attrs="{'invisible': [('type', 'in', ['service', 'consu'])], 'required': [('allow_to_order', '=', 'available'), ('type', '=', 'product')]}"/>
                <field name="show_availability"/>
                <field name="available_message" attrs="{'invisible': ['|', ('type', 'in', ['service', 'consu']), ('show_availability', '!=', 'always')]}" options="{'height': 112}" placeholder="Type here to override default messages from website configuration"/>
                <field name="threshold_message" attrs="{'invisible': ['|', ('type', 'in', ['service', 'consu']), ('show_availability', '=', 'never')]}" options="{'height': 112}" placeholder="Type here to override default messages from website configuration"/>
                <field name="out_of_stock_message" attrs="{'invisible': ['|', ('type', 'in', ['service', 'consu']), ('show_availability', '=', 'never')]}" options="{'height': 112}" placeholder="Type here to override default messages from website configuration"/>
            </xpath>
        </field>
    </record>
</odoo>
