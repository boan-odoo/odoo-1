<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_availability_setting']" position="attributes">
                <attribute name="title">Manage the inventory of your products and display their availability status on the website.</attribute>
            </xpath>

            <xpath expr="//div[@name='stock_inventory_availability']" position="inside">
                <div class="content-group">
                    <div class="row mt16"
                        id="website_warehouse_setting"
                        groups="stock.group_stock_multi_warehouses">
                        <label for="website_warehouse_id" string="Warehouse" class="col-lg-3 o_light_label" />
                        <field name="website_warehouse_id"/>
                    </div>
                    <div class="row mt16" id="available_treshold_setting">
                        <label for="available_threshold" string="Threshold" class="col-lg-3 o_light_label" />
                        <field name="available_threshold" class="oe_inline"/>
                    </div>
                    <div class="row">
                        <label for="allow_order" string="Allow Orders" class="col-lg-3 o_light_label"/>
                        <field name="allow_order" string="Allow Order"/>
                    </div>
                    <div class="row ">
                        <label for="in_stock" string="In Stock" class="col-lg-4 o_light_label"/>
                        <field name="in_stock" string="Inr"/>
                    </div>
                    <div class="row">
                        <label for="below_threshold" string="Below Threshold" class="col-lg-4 o_light_label"/>
                        <field name="below_threshold" string="Below Threshold"/>
                    </div>
                    <div class="row">
                        <label for="no_stock" string="No Stock" class="col-lg-4 o_light_label"/>
                        <field name="no_stock" string="No Stock"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
