<odoo>

<template name="Items" id="s_product_list">
    <t t-set="url" value="url or '#'"/>
    <section class="s_product_list pt48 pb24">
        <div class="container-fluid">
            <t t-call="website.s_product_list_default_template"/>
        </div>
    </section>
</template>

