<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_call_to_action" name="Call to Action">
    <section class="s_call_to_action o_cc o_cc3 pt64 pb32">
        <div class="container">
            <t t-call="website.s_call_to_action_default_template"/>
        </div>
    </section>
</template>

<template id="s_call_to_action_default_template" groups="base.group_user">
    <div class="row">
        <div class="col-lg-9 pb24">
            <h3><b>50,000+ companies</b> run Odoo to grow their businesses.</h3>
            <p>Join us and make your company a better place.</p>
        </div>
        <div class="col-lg-3 pt8">
            <p style="text-align: right;">
                <a t-att-href="cta_btn_href" class="btn btn-primary btn-lg mb-3"><t t-esc="cta_btn_text">Contact us</t></a>
            </p>
        </div>
    </div>
</template>

<template id="s_call_to_action_centered_template" groups="base.group_user">
    <div class="row">
        <div class="col-lg-12 text-center pb24">
            <h3><b>50,000+ companies</b> run Odoo to grow their businesses.</h3>
            <p class="lead">Join us and make your company a better place.</p>
            <a t-att-href="cta_btn_href" class="btn btn-primary btn-lg mt-3"><t t-esc="cta_btn_text">Contact us</t></a>
        </div>
    </div>
</template>

</odoo>

