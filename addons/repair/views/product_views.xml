<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_repair" model="ir.ui.view">
        <field name="name">product.template.inherit.repair</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale.product_template_form_view_invoice_policy"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expense_policy']" position="after">
                <field name="create_repair_order" attrs="{'invisible':[('type', '!=', 'service')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
