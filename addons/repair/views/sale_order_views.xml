<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_inherited_form_repair" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.repair</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button" name="action_open_repair_orders" 
                    type="object" icon="fa-cog" groups='stock.group_stock_user'
                    attrs="{'invisible': [('repair_order_ids', '=', [])]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">1</span>
                        <span class="o_stat_text">Repair Order</span>
                    </div>
                </button>
                <field name="repair_order_ids" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
