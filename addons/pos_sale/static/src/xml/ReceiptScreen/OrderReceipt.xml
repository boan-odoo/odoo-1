<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('orderlines')]/t" position="inside">
            <div style="padding-top: 10px" class="pos-receipt-left-padding" t-if="line.so_reference">From <t t-esc="line.so_reference"/></div>
            <div class="pos-receipt-left-padding" t-if="line.productDetails">
                <table class="sale-order-info">
                    <tr t-foreach='line.productDetails' t-as='line'>
                        <td><t t-esc="line['product_uom_qty']" /></td>
                        <td style="max-width: 200px;">
                            <t t-esc="line['product_name']" />
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
    </t>

</templates>
