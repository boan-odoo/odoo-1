<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="l10n_es_tbai_certificate_form" model="ir.ui.view">
            <field name="name">l10n_es_tbai.certificate.form</field>
            <field name="model">l10n_es_edi.certificate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="content"/>
                            <field name="password" password="True"/>
                            <label for="date_start" string="Validity"/>
                            <div>
                                <field name="date_start"/>
                                -
                                <field name="date_end"/>
                            </div>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="l10n_es_tbai_certificate_tree" model="ir.ui.view">
            <field name="name">l10n_es_tbai.certificate.tree</field>
            <field name="model">l10n_es_edi.certificate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="l10n_es_tbai_certificate_action" model="ir.actions.act_window">
            <field name="name">Certificates for TBAI invoices on Spain</field>
            <field name="res_model">l10n_es_edi.certificate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first certificate</p>
            </field>
        </record>
        <menuitem id="menu_l10n_es_tbai_certificates" name="Certificates (TicketBAI)" sequence="101"
            parent="l10n_es_edi_sii.menu_l10n_es_edi_root" action="l10n_es_tbai_certificate_action"
            groups="account.group_account_manager"/>
    </data>
</odoo>
