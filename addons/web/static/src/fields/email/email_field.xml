<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.EmailField" owl="1">
        <t t-if="props.isEditing">
            <input
                class="o_field_email"
                t-att-placeholder="props.attrs.placeholder"
                t-att-value="props.value or ''"
            />
        </t>
        <t t-else="">
            <div class="o_field_email">
                <t t-if="props.value">
                    <a
                        class="o_form_uri o_text_overflow"
                        t-attf-href="mailto:{{ props.value }}"
                        t-esc="props.value"
                        t-on-click.stop=""
                    />
                </t>
            </div>
        </t>
    </t>

</templates>
