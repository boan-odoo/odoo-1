<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="wowl.ComparisonMenu" owl="1">
    <Dropdown class="o_comparison_menu"
      togglerClass="'btn btn-secondary'"
      t-on-dropdown-item-selected.stop="onDropdownItemSelected"
      >
      <i t-att-class="icon"/>
      <span class="o_dropdown_title">Comparison</span>
      <t t-set-slot="menu">
        <t t-foreach="items" t-as="item" t-key="item.id">
          <DropdownItem class="o_menu_item dropdown-item"
            t-att-class="{ active: item.isActive }"
            payload="{ itemId: item.id }"
            parentClosingMode="'none'"
            >
            <t t-esc="item.description"/>
          </DropdownItem>
        </t>
      </t>
    </Dropdown>
  </t>

</templates>
