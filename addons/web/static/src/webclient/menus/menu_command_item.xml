<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="web.AppIconCommand" owl="1">
    <div class="o_command_default d-flex flex-grow-1 align-items-center justify-content-between px-4 py-2">
        <t t-slot="name"/>
        <img t-if="props.webIconData" class="o_app_icon position-relative rounded-sm" t-attf-src="{{props.webIconData}}"/>
        <div t-else="" class="o_app_icon" t-attf-style="background-color:{{props.webIcon.backgroundColor}}" >
          <i t-att-class="props.webIcon.iconClass" t-attf-style="color:{{props.webIcon.color}}"></i>
        </div>
    </div>
  </t>

</templates>
