<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="mail_test_multi_company_rule" model="ir.rule">
        <field name="name">Mail Test Multi Company</field>
        <field name="model_id" ref="test_mail.model_mail_test_multi_company"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="mail_test_customer_company_rule" model="ir.rule">
        <field name="name">Mail Test Customer: Multi Company</field>
        <field name="model_id" ref="test_mail.model_mail_test_customer"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    <record id="mail_test_customer_portal_rule" model="ir.rule">
        <field name="name">Mail Test Customer: Portal</field>
        <field name="model_id" ref="test_mail.model_mail_test_customer"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
