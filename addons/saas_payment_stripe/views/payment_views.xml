<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">Stripe Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment_stripe_connect.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <field name="stripe_publishable_key" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
            </field>
            <field name="stripe_secret_key" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
            </field>
            <xpath expr="//group[@name='stripe_onboarding_group']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//div[@name='stripe_configuration_info']" position="replace">
            </xpath>
            <xpath expr="//group[@name='acquirer']" position="inside">
                <div class="alert alert-warning" role="status" name="stripe_onboarding_almost"
                     attrs="{'invisible': ['|', ('provider', '!=', 'stripe'), ('stripe_account_validated', '=', 'True')]}">
                    <field name="stripe_account_validated" invisible="1"/>
                    <p>You're almost set !</p>
                    <p>Click the button to validate your account on Stripe and create live charges.</p>
                    <p>You can already create test charges.</p>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
