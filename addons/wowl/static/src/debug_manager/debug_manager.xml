<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="wowl.DebugManager" owl="1">
        <Dropdown class="o_debug_manager"
          beforeOpen="beforeOpenDropdown"
          t-on-dropdown-item-selected.stop="onDropdownItemSelected">
            <span class="fa fa-bug"/>
            <t t-set-slot="menu">
                <t t-foreach="getItems()" t-as="item" >
                    <t t-if="!item.hide">
                        <t t-if="item.type == 'item'">
                            <DropdownItem payload="{ callback: item.callback }"><t t-esc="item.description"/></DropdownItem>
                        </t>
                        <div t-if="item.type == 'separator'" role="separator" class="dropdown-divider"/>
                    </t>
                </t>
            </t>
        </Dropdown>
    </t>

</templates>
