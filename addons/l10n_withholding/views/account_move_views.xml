<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_as_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <field name="wht_ids" invisible="1"/>
                <button name="open_wht_view"
                    attrs="{'invisible': ['!', ('wht_ids', '!=', False)]}"
                    class="oe_stat_button"
                    icon="fa-cube"
                    type="object">
                    Retention
                    <field name="amount_wht" nolabel="1"/>
                </button>
            </xpath>
            <button name="button_draft" position="after">
                <button name="button_create_retention" attrs="{'invisible': [('wht_ids', '!=', False), ('move_type', 'in', ('in_invoice', 'out_invoice'))]}"/>
            </button>
        </field>
    </record>
</odoo>
