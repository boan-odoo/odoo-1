<?xml version="1.0"?>
<odoo>
    <!-- Should be in data rather than views ? -->
    <template id="project_update_default_description" inherit_id="hr_timesheet.project_update_default_description">
        <xpath expr="//div[@name='milestone']" position="after">
            <hr/>
            <div name="profitability">
                <h1>Profitability</h1>

                In <t t-esc="profitability['month']"/>,
                <b>
                    <t t-if="profitability['is_timesheet_uom_hour']" t-esc="profitability['timesheet_unit_amount']" t-options='{"widget": "float_time"}'/>
                    <t t-else="" t-esc="profitability['timesheet_unit_amount']"/>
                    <t t-esc="profitability['timesheet_uom']"/>
                </b> have been
                timesheeted on the project vs
                    <t t-if="profitability['is_timesheet_uom_hour']" t-esc="profitability['previous_timesheet_unit_amount']" t-options='{"widget": "float_time"}'/>
                    <t t-else="" t-esc="profitability['previous_timesheet_unit_amount']"/>
                    <t t-esc="profitability['timesheet_uom']"/>
                in <t t-esc="profitability['previous_month']"/> (<t t-esc="profitability['timesheet_trend']"/> %).

                The cost of the project is now at <t t-esc="profitability['costs']"/>, for a revenue of <t t-esc="profitability['revenues']"/> leading a
                <span>
                    <font t-if="profitability['margin'] > 0"  style="color: rgb(0, 128, 0)">
                        <t t-esc="profitability['margin_formatted']"/>
                    </font>
                    <font t-else="" style="color: rgb(128, 0, 0)">
                        <t t-esc="profitability['margin_formatted']"/>
                    </font>
                </span> margin (<t t-esc="profitability['margin_percentage']"/> %), and a <b><t t-esc="profitability['billing_rate']"/> % billing rate</b>
            </div>
        </xpath>
    </template>

    <template id="project_profitability_timesheet_panel" name="Timesheet Profitability">
        <t t-if="is_timesheet_uom_hour" t-esc="timesheet_unit_amount" t-options='{"widget": "float_time"}'/>
        <t t-else="" t-esc="timesheet_unit_amount"/>
        <t t-esc="timesheet_uom"/>
        (<t t-esc="percentage_billable"/> % billable)
    </template>

</odoo>
