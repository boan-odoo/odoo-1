<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_invoice.pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.pos.invoice</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_tipproduct']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" title="Allow payment of invoices.">
                    <div class="o_setting_left_pane">
                        <field name="module_pos_invoice" attrs="{'readonly': [('has_active_session','=', True)]}"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_pos_invoice" string="Pay Invoices"/>
                        <div class="text-muted">
                            Pay invoices
                        </div>
                        <div class="content-group" attrs="{'invisible': [('module_pos_invoice', '=', False)]}">
                            <div class="mt16" id="pay_invoice_product_id">
                                <label string="Pay Invoice Product" for="pay_invoice_product_id" class="o_light_label"/>
                                <field name="pay_invoice_product_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
